{% extends 'UE235BibliothequeBundle::layout.html.twig' %} {% block title %}Derniers Ajout{% endblock %} {% block content %}
<h2 class="text-center">Liste des Cat√©gories</h2>
	<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	{% for cat in categories %}
		<div class="panel panel-default">
			<a class="accordion" role="button" data-toggle="collapse" data-parent="#accordion" href="#col-{{cat.id}}" aria-expanded="true" aria-controls="col-{{cat.id}}">
				<div class="panel-heading" role="tab" id="heading-{{cat.id}}">
					<h4 class="panel-title">
						{{ cat.nom }}
					<span class="badge pull-right">{{cat.livres | length}}</span>
					</h4>
				</div>
			</a>
			<div id="col-{{cat.id}}" class="panel-collapse collapse {% if cat.id == 1  %}in{% endif %}" role="tabpanel" aria-labelledby="heading-{{cat.id}}">
				<div class="panel-body">
					{% for livre in livres %}
					<div class="thumbnails">
						{% if cat.nom == livre.categorie.nom %}
							<p>{{ livre.titre }}</p>
						{% endif %}
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endblock %}