{% extends 'UE235BibliothequeBundle::layout.html.twig' %}

{% block title %}Fiche du livre {{ livre.titre }}{% endblock %}

{% block content %}
	<h1>Fiche du livre {{ livre.titre }}</h1>

	<p>{{ livre.description }}</p>

	<p>Catégorie : {{ livre.categorie.nom }}</p>

	<p>Acteurs</p>
	<ul>
		{% for a in livre.auteurs %}
		    <li>{{ a.prenom }} {{ a.nom}}</li>
		{% endfor %}
	</ul>
	
	<p><a href="{{ path('ue235_livre_lister') }}">Retour à la liste des livres</a></p>
{% endblock %}