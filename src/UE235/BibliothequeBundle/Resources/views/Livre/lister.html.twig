{% extends 'UE235BibliothequeBundle::layout.html.twig' %}

{% block title %}Liste des livres{% endblock %}
{% block add_css %}
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
	<h1>Liste des livres</h1>

	<table id="livre" class="table table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
					<tr>
							<th>Titre</th>
							<th>Description</th>
							<th>Catégorie</th>
							<th>Auteurs</th>
							<th>Actions</th>
					</tr>
			</thead>
		{% for f in livres %}
			<tr>
				<td>{{ f.titre }}</td>
				<td>{{ f.description }}</td>
				<td>@todo ajouter Catégorie</td>
				<td>@todo ajouter Auteurs</td>
				<td>
						<div class="btn-group">
								<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions <span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
										<li><a href="{{ path('ue235_livre_voir', { 'id': f.id }) }}">Voir</a></li>
										<li><a href="{{ path('ue235_livre_modifier', { 'id': f.id }) }}">Modifier</a></li>
										<li><a href="{{ path('ue235_livre_supprimer', { 'id': f.id }) }}">Supprimer</a></li>
								</ul>
						</div>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">Aucun livre n’a été trouvé.</td>
			</tr>
		{% endfor %}
	</table>

	<p><a href="{{ path('ue235_livre_ajouter') }}">Ajouter un livre</a><p>
{% endblock %}
{% block add_js %}
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('#livre').DataTable();
} );
</script>
{% endblock %}